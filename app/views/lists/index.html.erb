<!-- HTML code copied from http://todomvc.com/examples/vanillajs/ -->
<section class="todoapp">
  <header class="header">
    <h1>Your Lists</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, :class => "new-todo" %>
      <%= f.submit :style => "display: none" %>
    <% end %>
    <!-- the form_for generates:
                                     params[:list][:name]
    <form class="new_todo" type="text" name="list[name]" id="list_name">

    list[name] #=>
    params = {
      :list => {
        :name => " "
      }
    }
    -->

</form>
  </header>
  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <% @lists.each do |list| %>
      <li>
        <div class="view">
          <!-- 1. <label><a href="#"><%= list.name %></a></label> -->
          <label><%= link_to list.name, list_path(list) %></label>
        </div>
      </li>
      <% end %>
    </ul>
  </section>
  <footer class="footer">
  </footer>
</section>
